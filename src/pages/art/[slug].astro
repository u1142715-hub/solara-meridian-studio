---
// src/pages/art/[slug].astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const artworks = await getCollection('artworks');

  return artworks.map((art) => ({
    params: { slug: art.slug },
    props: { art },
  }));
}

const { art } = Astro.props;
const data = art.data;

// Fallback labels
const pageTitle = `${data.title} – Art Detail`;
const pageDescription = data.description ?? 'Artwork detail from Solara Meridian Studio.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="art-detail">
    <a href="/art" class="art-detail__back">← Back to collection</a>

    <article class="art-detail__layout">
      <section class="art-detail__media">
        <figure class="art-detail__hero">
          <img src={data.heroImage} alt={data.title} loading="eager" />
        </figure>

        {data.detailImages && data.detailImages.length > 0 && (
          <div class="art-detail__thumbs">
            {data.detailImages.map((img) => (
              <figure class="art-detail__thumb">
                <img src={img} alt={`${data.title} detail`} loading="lazy" />
              </figure>
            ))}
          </div>
        )}
      </section>

      <section class="art-detail__info">
        <header class="art-detail__header">
          <p class="art-detail__collection">
            {data.collection ?? 'Solara Meridian Studio Collection'}
          </p>
          <h1 class="art-detail__title">{data.title}</h1>
        </header>

        {data.description && (
          <p class="art-detail__description">
            {data.description}
          </p>
        )}

        <div class="art-detail__meta">
          {data.sizeOptions && data.sizeOptions.length > 0 && (
            <div class="art-detail__meta-block">
              <h2>Available Sizes</h2>
              <ul>
                {data.sizeOptions.map((size) => (
                  <li>{size}</li>
                ))}
              </ul>
            </div>
          )}

          {data.dominantPalette && data.dominantPalette.length > 0 && (
            <div class="art-detail__meta-block">
              <h2>Palette</h2>
              <p>{data.dominantPalette.join(' · ')}</p>
            </div>
          )}
        </div>

        <div class="art-detail__cta-group">
          {data.redbubbleUrl && (
            <a
              href={data.redbubbleUrl}
              class="btn btn--primary"
              rel="noopener noreferrer"
              target="_blank"
            >
              View &amp; Buy on Redbubble
            </a>
          )}

          {data.saatchiUrl && (
            <a
              href={data.saatchiUrl}
              class="btn btn--secondary"
              rel="noopener noreferrer"
              target="_blank"
            >
              View Premium Edition on Saatchi Art
            </a>
          )}
        </div>
      </section>
    </article>
  </main>
</BaseLayout>

<style>
  .art-detail {
    max-width: 1120px;
    margin: 0 auto;
    padding: var(--space-4) var(--space-2) var(--space-5);
  }

  .art-detail__back {
    display: inline-block;
    margin-bottom: var(--space-3);
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    text-decoration: none;
  }

  .art-detail__back:hover {
    color: var(--color-accent-gold);
  }

  .art-detail__layout {
    display: grid;
    gap: var(--space-4);
    grid-template-columns: minmax(0, 3fr) minmax(0, 2fr);
  }

  .art-detail__hero {
    margin: 0 0 var(--space-3);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-soft);
  }

  .art-detail__hero img {
    display: block;
    width: 100%;
    height: auto;
  }

  .art-detail__thumbs {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: var(--space-2);
  }

  .art-detail__thumb {
    margin: 0;
    border-radius: 0.75rem;
    overflow: hidden;
    opacity: 0.9;
  }

  .art-detail__thumb img {
    display: block;
    width: 100%;
    height: auto;
  }

  .art-detail__thumb:hover {
    opacity: 1;
  }

  .art-detail__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .art-detail__collection {
    font-size: var(--font-size-xs);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--color-text-muted);
    margin-bottom: var(--space-1);
  }

  .art-detail__title {
    font-size: var(--font-size-3xl);
    line-height: 1.05;
    margin: 0;
  }

  .art-detail__description {
    font-size: var(--font-size-md);
    color: var(--color-text-main);
  }

  .art-detail__meta {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: var(--space-2);
  }

  .art-detail__meta-block h2 {
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.16em;
    color: var(--color-text-muted);
    margin: 0 0 var(--space-1);
  }

  .art-detail__meta-block p,
  .art-detail__meta-block li {
    font-size: var(--font-size-sm);
  }

  .art-detail__meta-block ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .art-detail__cta-group {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-2);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.85rem 1.75rem;
    border-radius: 999px;
    font-size: var(--font-size-sm);
    text-decoration: none;
    border: 1px solid transparent;
    cursor: pointer;
    transition: transform 0.15s ease, box-shadow 0.15s ease, background-color 0.15s ease, color 0.15s ease;
  }

  .btn--primary {
    background: var(--color-accent-gold);
    color: var(--color-bg-main);
    box-shadow: var(--shadow-soft);
  }

  .btn--primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.45);
  }

  .btn--secondary {
    background: transparent;
    color: var(--color-accent-gold);
    border-color: var(--color-accent-gold);
  }

  .btn--secondary:hover {
    background: rgba(214, 182, 118, 0.12);
  }

  @media (max-width: 900px) {
    .art-detail__layout {
      grid-template-columns: minmax(0, 1fr);
    }
  }
</style>
