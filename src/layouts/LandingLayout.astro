---
const {
  title = "Solara Meridian Studio",
  description = "",
} = Astro.props;

// Base URL (GitHub Pages project site safe)
// With astro.config base="/solara-meridian-studio", Astro sets BASE_URL to "/solara-meridian-studio/"
// We normalize to NO trailing slash so we can safely use `${base}/path`
const base = (import.meta.env.BASE_URL || "/").replace(/\/$/, "");
const pathname = Astro.url?.pathname ?? "/";

// Normalize pathname so active link logic works on GitHub Pages project sites
// Example: pathname "/solara-meridian-studio/art/" -> normalized "/art/"
const normalizedPathname =
  base && base !== "/" && pathname.startsWith(base + "/")
    ? pathname.slice(base.length) || "/"
    : pathname;

// Active class helper (expects href like "/art" or "/art/")
const isActive = (href) => {
  const a = normalizedPathname.endsWith("/") ? normalizedPathname : normalizedPathname + "/";
  const b = href.endsWith("/") ? href : href + "/";
  return a === b ? "nav__link nav__link--active" : "nav__link";
};

// Saatchi profile (single external CTA; homepage remains art-first)
const SAATCHI_PROFILE_URL = "https://www.saatchiart.com/en-au/solara-meridian-studio";

---
export interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

